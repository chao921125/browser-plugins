{
    "manifest_version": 2,
    "name": "chrome-ext",
    "description": "chrome extension",
    "version": "0.0.1",
    "options_page": "options.html",
    "browser_action": {
        "default_title": "popup",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "*://*.taobao.com/*"
        ],
        "js": [
            "js/content.js"
        ],
        "css":[
            "css/content.css"
        ],
        "run_at": "document_end"
    }],
    "background": {
        "persistent": true,
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "minimum_chrome_version": "22.0.0",
    "web_accessible_resources": [
        "js/*",
        "css/*",
        "img/*"
    ]
}
